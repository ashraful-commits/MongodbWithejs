
    

<div class="container">
    <!------------------------------------------------------- student view  -->
   <div  class="row d-flex flex-col justify-content-center my-5 shadow">
    <h1 class="text-center bg-primary p-1 text-white">All Student</h1>
    <div  class="col-md-12 border border-2 border-primary">
        <div class="row">
            <% stu_data.forEach((element ,index)=> { %>
                <div class="col-md-3 my-2">
                   <div style="background-image: url('https://www.kibrispdr.org/data/898/walpaper-id-card-6.jpg');background-size: cover; " class="card border border-1 border-primary shadow">
                    <div class="card-header bg-primary text-center d-flex justify-content-between align-items-center">
                        <span style="width:10px; height:10px; border-radius: 100%;background-color:white" class="d-block"></span>

                        <h5 class="text-white py-2"><%= element.name %> </h5>
                        <a class="btn-close btn-close-white btn-sm" href="/delete/<%= element.id %> "></a>
                    </div>
                    <div class="card-body">
                        <div class="d-flex">
                           
                            <% if (element.photo == '6.jpg') { %>
                                <img class="card-img-top border border-warning border-2 shadow"  style="width: 100px;height: 120px;" src="/images/<%= element.photo %> " alt="">
                                <% } else { %>
                                <img class="card-img-top border border-warning border-2 shadow" style="width: 100px;height: 120px;"  src="/images/<%= element.photo %> " alt="">
                            <% } %>
                            <div class="px-2 w-100 ">
                            
                                <h6>Id     : <%= index+1 %></h6>
                                <h6>Age     : <%= element.age %> Y </h6>
                                <h6>Gender  : <%= element.gender %> </h6>
                            <h6>Phone   : <%= element.phone %> </h6>
                            <h6>Location: <%= element.location %> </h6>
                            
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center bg-primary text-white">
                        <h6>Email   : <%= element.email %> </h6>
                    </div>
                   </div>
                </div>
            <% }) %>
        </div>
    </div>
   </div>
   <div class="row d-flex justify-content-center mt-5">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-primary d-flex  justify-content-between">
                <a href="" data-bs-target="#exampleModalToggle" data-bs-toggle="modal" class="w-50 h-100 h2 btn btn-light align-items-center">Add New Student</a> <span class="text-white h2 pe-5">Student Data Table</span>
            </div>
            <div class="card-body">
                <table class="table table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center">Id</th>
                            <th class="text-center">Name</th>
                            <th class="text-center">Photo</th>
                            <th class="text-center">age</th>
                            <th class="text-center">Skill</th>
                            <th class="text-center">Email</th>
                            <th class="text-center">Phone</th>
                            <th class="text-center">Gender</th>
                            <th class="text-center">Location</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% stu_data.forEach((element,index) => { %>
                            <tr class="">
                                <td class="text-center"><%= index+1%> </td>
                                <td class="text-center"><%= element.name %> </td>
                                <td class="text-center">
                                    <% if (element.photo == '6.jpg') { %>
                                        <img style="width: 50px;height:50px" src="/images/<%= element.photo %> " alt="">
                                        <% } else { %>
                                            <img style="width: 50px;height:50px" src="/images/<%= element.photo %> " alt="">
                                    <% } %>
                                </td>
                                <td class="text-center"><%= element.age %> </td>
                                <td class="text-center"><%= element.skill %> </td>
                                <td class="text-center"><%= element.email %> </td>
                                <td class="text-center"><%= element.phone %> </td>
                                <td class="text-center"><%= element.gender %> </td>
                                <td class="text-center"><%= element.location %> </td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-primary" href="/view/<%= element.id %> "><i class="fas fa-eye"></i></a>
                                    <a class="btn btn-sm btn-warning"  href="/update/<%= element.id %> "><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-sm btn-danger" href="/delete/<%= element.id %> "><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        <% }) %> 
                        
                       
                    </tbody>
                </table>
            </div>
           </div>
    </div>
   </div>

   
</div>



<!---------------------------------------------------------------- modal  -->
<div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <div class="card">
            <div class="card-header bg-primary text-center text-white">
                <h1>Create New Student</h1>
            </div>
            <div class="card-body">
                <form action="/" method="post" enctype="multipart/form-data">
                    <div class="m-1">
                        <label for="">Name</label>
                        <input type="text" class="form-control" name="name" id="">
                    </div>
                    <div class="m-1">
                        <label for="">Age</label>
                        <input type="text" class="form-control" name="age" id="">
                    </div>
                    <div class="m-1">
                        <label for="">Skill</label>
                        <input type="text" class="form-control" name="skill" id="">
                    </div>
                    <div class="m-1">
                        <label for="">Email</label>
                        <input type="email" class="form-control" name="email" id="">
                    </div>
                    <div class="m-1">
                        <label for="">Phone</label>
                        <input type="text" class="form-control" name="phone" id="">
                    </div>
                    <div class="m-1">
                        <label for="">Gender</label>
                        <select name="gender" id="">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="m-1">
                        <label for="">Location</label>
                        <select name="location" id="">
                            <option value="Uttara">Uttara</option>
                            <option value="Mirpur">Mirpur</option>
                            <option value="Badda">Badda</option>
                        </select>
                    </div>
                    <div class="m-1">
                        <label for="">Photo</label>
                       <input class="form-control" name="photo" type="file">
                    </div>
                    <button class="btn btn-primary w-100" type="submit">Add new</button>
                </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


 